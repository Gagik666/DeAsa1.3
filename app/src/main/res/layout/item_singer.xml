<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp">

    <View
        android:id="@+id/viewLeft"
        android:layout_width="30dp"
        android:layout_height="4dp"
        android:background="@color/magenta_dark"
        app:layout_constraintEnd_toStartOf="@id/btnSinger"
        app:layout_constraintTop_toTopOf="@id/btnSinger"
        app:layout_constraintBottom_toBottomOf="@id/btnSinger"/>

    <TextView
        android:id="@+id/btnSinger"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style"
        android:textAllCaps="false"
        android:text="Ինգա Անուշ արշակյաններ"
        android:textColor="@color/magenta_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:elevation="10dp"
        android:paddingVertical="16dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <View
        android:id="@+id/viewRight"
        android:layout_width="30dp"
        android:layout_height="4dp"
        android:background="@color/magenta_dark"
        app:layout_constraintStart_toEndOf="@id/btnSinger"
        app:layout_constraintTop_toTopOf="@id/btnSinger"
        app:layout_constraintBottom_toBottomOf="@id/btnSinger"/>

</androidx.constraintlayout.widget.ConstraintLayout>